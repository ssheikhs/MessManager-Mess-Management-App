<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/layoutTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:background="@drawable/bg_header_rounded"
            android:gravity="center"
            android:text="Profile"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F1F5F9"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- âœ… Profile Photo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="Profile Photo"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person" />

            <Button
                android:id="@+id/btnUploadPhoto"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="35dp"
                android:backgroundTint="#1E88E5"
                android:letterSpacing="0.03"
                android:text="Upload Photo"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Name -->
        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Name"
            android:textColor="#2D3748"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Role -->
        <TextView
            android:id="@+id/tvProfileRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Role"
            android:textColor="#4A5568"
            android:textSize="16sp" />

        <!-- Contact -->
        <TextView
            android:id="@+id/tvProfileContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Contact:"
            android:textColor="#4A5568"
            android:textSize="15sp" />

        <!-- Address -->
        <TextView
            android:id="@+id/tvProfileAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Address:"
            android:textColor="#4A5568"
            android:textSize="15sp" />

        <!-- Parents' Contact -->
        <TextView
            android:id="@+id/tvProfileParentContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Parents' Contact:"
            android:textColor="#4A5568"
            android:textSize="15sp" />

        <!-- Admin Panel -->
        <Button
            android:id="@+id/btnAdminPanel"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="1dp"
            android:backgroundTint="#1565C0"
            android:letterSpacing="0.03"
            android:text="Admin Panel"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Sync -->
        <Button
            android:id="@+id/btnSync"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#00897B"
            android:letterSpacing="0.03"
            android:text="Sync with Cloud"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Logout -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#D32F2F"
            android:letterSpacing="0.03"
            android:text="Logout"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
