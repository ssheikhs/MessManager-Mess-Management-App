<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="4dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:background="@drawable/bg_header_rounded"
            android:gravity="center"
            android:text="Set Meal Prices"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:background="#F1F5F9"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Breakfast Price -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:letterSpacing="0.05"
            android:text="BREAKFAST PRICE (৳)"
            android:textColor="#4A5568"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etBreakfastPrice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:hint="Enter breakfast price"
            android:inputType="numberDecimal"
            android:paddingHorizontal="16dp"
            android:textSize="15sp" />

        <!-- Lunch Price -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:letterSpacing="0.05"
            android:text="LUNCH PRICE (৳)"
            android:textColor="#4A5568"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etLunchPrice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:hint="Enter lunch price"
            android:inputType="numberDecimal"
            android:paddingHorizontal="16dp"
            android:textSize="15sp" />

        <!-- Dinner Price -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:letterSpacing="0.05"
            android:text="DINNER PRICE (৳)"
            android:textColor="#4A5568"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDinnerPrice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/edittext_background"
            android:hint="Enter dinner price"
            android:inputType="numberDecimal"
            android:paddingHorizontal="16dp"
            android:textSize="15sp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSavePrices"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="180dp"
            android:backgroundTint="#1565C0"
            android:letterSpacing="0.03"
            android:text="Set Price"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>
