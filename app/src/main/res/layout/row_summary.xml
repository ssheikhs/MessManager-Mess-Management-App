<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E3F2FD"
    android:padding="14dp"
    android:elevation="3dp"
    android:layout_marginBottom="10dp">

    <!-- Name -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Member Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1A202C"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:background="#CBD5E0" />

    <!-- Meals -->
    <TextView
        android:id="@+id/tvMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meals: Breakfast 0 • Lunch 0 • Dinner 0"
        android:textColor="#4A5568"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:background="#CBD5E0" />

    <!-- Costs -->
    <TextView
        android:id="@+id/tvMealCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal cost: 0 ৳"
        android:textColor="#4A5568"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:background="#CBD5E0" />

    <TextView
        android:id="@+id/tvOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other expenses: 0 ৳"
        android:textColor="#4A5568"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:background="#CBD5E0" />

    <TextView
        android:id="@+id/tvPaid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paid: 0 ৳"
        android:textColor="#2B6CB0"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:background="#CBD5E0" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total cost: 0 ৳"
        android:textColor="#1A202C"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:background="#CBD5E0" />

    <!-- Balance -->
    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due: 0 ৳"
        android:textColor="#E53E3E"
        android:textStyle="bold"
        android:textSize="15sp" />

</LinearLayout>
