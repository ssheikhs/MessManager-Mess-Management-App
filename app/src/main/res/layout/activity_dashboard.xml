<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- SCROLLABLE CONTENT (everything except bottom nav) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="84dp">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/layoutHeader"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDashboardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@drawable/bg_header_rounded"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:letterSpacing="0.02"
                    android:text="Dashboard"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvDashboardDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textColor="#6B7280"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Stats Card -->
            <LinearLayout
                android:id="@+id/layoutStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="4dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp">

                    <!-- Total Meals -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="103dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:background="#F1F5F9"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Meals"
                            android:textColor="#6B7280"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvTotalMealsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#1F2937"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Total Expense -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:background="#F1F5F9"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Expense"
                            android:textColor="#6B7280"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvTotalExpenseValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 ৳"
                            android:textColor="#1F2937"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Paid & Meal Rate -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical"
                        android:background="#F1F5F9"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paid (This Month)"
                            android:textColor="#6B7280"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvPaidValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 ৳"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meal Price"
                            android:textColor="#6B7280"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvMealRateValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 ৳"
                            android:textColor="#1F2937"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Outstanding Dues -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:background="#F1F5F9"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance Status"
                            android:textColor="#6B7280"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvOutstandingDuesValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 ৳"
                            android:textColor="#D32F2F"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Quick Meal Actions -->
            <LinearLayout
                android:id="@+id/layoutQuickMeals"
                android:layout_width="match_parent"
                android:layout_height="221dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Breakfast -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Breakfast"
                        android:textColor="#1F2937"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnBreakfastAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:backgroundTint="#2E7D32"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnBreakfastCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#D32F2F"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Lunch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lunch"
                        android:textColor="#1F2937"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnLunchAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:backgroundTint="#2E7D32"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnLunchCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#D32F2F"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Dinner -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dinner"
                        android:textColor="#1F2937"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnDinnerAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:backgroundTint="#2E7D32"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnDinnerCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#D32F2F"
                        android:textColor="@android:color/white" />
                </LinearLayout>


            </LinearLayout>

            <!-- Pay Now (pattern) -->
            <Button
                android:id="@+id/btnPayNow"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="18dp"
                android:backgroundTint="#2E7D32"
                android:text="PAY NOW"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.03" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom nav (fixed at bottom) -->
    <LinearLayout
        android:id="@+id/layoutBottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="0dp"
        android:background="#E3F2FD"
        android:elevation="4dp">

        <!-- Dashboard -->
        <LinearLayout
            android:id="@+id/navMeals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivNavDashboard"
                android:layout_width="58dp"
                android:layout_height="39dp"
                android:contentDescription="Dashboard"
                android:scaleType="centerInside"
                android:src="@drawable/dashboard" />

            <TextView
                android:id="@+id/tvNavDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:layout_marginTop="2dp" />
        </LinearLayout>



        <!-- Expenses -->
        <LinearLayout
            android:id="@+id/navExpenses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivNavExpenses"
                android:layout_width="57dp"
                android:layout_height="41dp"
                android:contentDescription="Expenses"
                android:scaleType="centerInside"
                android:src="@drawable/expenses" />

            <TextView
                android:id="@+id/tvNavExpenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expenses"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Members -->
        <LinearLayout
            android:id="@+id/navMembers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivNavMembers"
                android:layout_width="54dp"
                android:layout_height="41dp"
                android:contentDescription="Members"
                android:scaleType="centerInside"
                android:src="@drawable/members" />

            <TextView
                android:id="@+id/tvNavMembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Members"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:layout_marginTop="2dp" />
        </LinearLayout>


        <!-- Profile -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivNavProfile"
                android:layout_width="49dp"
                android:layout_height="43dp"
                android:contentDescription="Profile"
                android:scaleType="centerInside"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/tvNavProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
